# Environment Variables Template
# ================================
# Copy this to .env and fill in your actual values
# Docker Compose automatically loads .env file

# IMPORTANT: Never commit .env to git!
# Add .env to .gitignore to protect secrets

# Flask Configuration
# -------------------
FLASK_ENV=production
FLASK_DEBUG=0

# Timezone for Trading Hours
# --------------------------
# Use your local trading market timezone
TZ=America/New_York

# Alpaca API Credentials
# -----------------------
# Get these from: https://alpaca.markets/ (Sign up for free paper trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets/v2 # Paper trading (use https://api.alpaca.markets for live)

# Interactive Brokers Configuration
# ----------------------------------
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497=paper trading, 7496=live trading
# Note: TWS or IB Gateway must be running with API enabled

# n8n Configuration (if using n8n container)
# -------------------------------------------
 N8N_BASIC_AUTH_ACTIVE=true
 N8N_BASIC_AUTH_USER=admin
 N8N_WEBHOOK_URL=http://localhost:5678/webhook-test/trading-webhook

 # DISCORD CONFIG 
# -------------------------------------------
# In your .env file (already set up!)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
DISCORD_GUILD_ID=your_guild_id_here
# API Security (Optional - for production)
# -----------------------------------------
# API_KEY=your_secret_api_key
# ALLOWED_ORIGINS=http://localhost:5678,https://yourdomain.com
